《終極日語詞彙大全：日檢考試、生活、職場一本搞定！》（附贈│專業日師錄製 單字 & 短句）

	
	
		
	   
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
			
		
			
				
			
			
				
	
