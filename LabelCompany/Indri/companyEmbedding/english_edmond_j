   var _rsRP=escape(document.referrer);
   var _rsND=_rsLP+'//.com/';

   if (parseInt(navigator.appVersion)>=4) {
      var _rsRD=(new Date()).getTime();
      var _rsSE=1;
      var _rsSV='';
      var _rsSM=1.0;
      _rsCL='';
   } 
   else {
      _rsCL='';
   }
   //document.write(_rsCL);

   document.write('');
}


if (document.cookie.indexOf('partner_session=compuserve') != -1) {
   document.write('');
}

// -->













 



















































 


 

 



 


